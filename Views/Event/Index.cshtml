@model eShop.Presentation.ViewModels.EventsListViewModel


<div class="container-fluid bg-transparent ">
    <div class="row align-items-center justify-content-center">

        <div class="col-md-3 pt-3">
            <div class="form-group">
                <select id="inputState" class="form-control">
                    <option selected>Type of dance</option>
                    <option>Samba de Gafieira</option>
                    <option>Forro</option>
                </select>
            </div>
        </div>

        <div class="col-md-3 pt-3">
            <div class="form-group">
                <select id="inputState" class="form-control">
                    <option selected>Type of event</option>
                    <option>Classes</option>
                    <option>Workshops</option>
                    <option>Parties</option>
                    <option>Festivals</option>
                </select>
            </div>
        </div>

        <div class="col-md-3 pt-3">
            <div class="form-group">
                <select id="inputState" class="form-control">
                    <option selected>Month</option>
                    <option>January</option>
                    <option>February</option>
                    <option>March</option>
                    <option>April</option>
                    <option>May</option>
                    <option>June</option>
                    <option>July</option>
                    <option>August</option>
                    <option>September</option>
                    <option>October</option>
                    <option>November</option>
                    <option>December</option>
                </select>
            </div>
        </div>

        <div class="col-md-2">
            <button type="button" class="btn btn-danger btn-block">Search</button>
        </div>
    </div>
</div>



<h1 class="text-center text-capitalize text-nowrap">@Model.CurrentCategory</h1>

<div class="card-deck">
    @foreach (var item in Model.Events)
    {
        <partial name="_EventCard" model="item" />
    }
</div>
