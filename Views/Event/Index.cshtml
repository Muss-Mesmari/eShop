@model eShop.Presentation.ViewModels.EventsListViewModel

<form method="get">
    <div class="input-group md-form form-sm form-2 pl-0">
        <input class="form-control my-0 py-1 amber-border" type="search" asp-for="SearchedEvent" placeholder="Search" aria-label="Search">
        <div class="input-group-append">
            <span class="input-group-text amber lighten-3" id="basic-text1">
                <i class="fas fa-search text-grey"
                   aria-hidden="true"></i>
            </span>
        </div>
    </div>
</form>


<h1 class="text-center text-capitalize text-nowrap">@Model.CurrentCategory</h1>

<div class="card-deck">
    @foreach (var item in Model.Events)
     {
        <partial name="_EventCard" model="item" />
     }
</div>
