@model eShop.Entities.Entities.Event

@{
    ViewData["Title"] = "Details";
}

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="justify-content-center">
        <img  class="img-thumbnail rounded" src="@Model.ImageUrl" alt="event" href="/Event/Details/@Model.EventId">
        <div class="caption">
            <h2>@Model.Name</h2>
            <p>@Model.ShortDescription</p>
            <h1 class="price text-success">@Model.Price @Model.Currency</h1>
            <p class="text-muted">@Model.LongDescription</p>
        </div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.EventId }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.EventId })
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-danger mt-3 text-nowrap"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-eventId="@Model.EventId">Add to cart
                 </a>
            </p>
        </div>
    </div>
</div>



