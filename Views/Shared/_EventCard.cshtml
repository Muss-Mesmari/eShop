@model eShop.Entities.Entities.Event

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageUrl" alt="event" href="/Event/Details/@Model.EventId">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("C")</h3>
            <h3>
                <a asp-controller="Event" asp-action="Details" asp-route-id="@Model.EventId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a id="btn" class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-eventId="@Model.EventId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>