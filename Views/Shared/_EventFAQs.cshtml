@model eShop.Presentation.ViewModels.EventViewModel

<div id="accordion">
    <div class="card">

        <div class="card-header" id="heading">
            <h5 class="mb-0">
                <button class="btn btn-block text-left" data-toggle="collapse" data-target="#collapse" aria-expanded="true" aria-controls="collapse">
                    @Model.FAQs.ToList()[0].Question
                </button>
            </h5>
        </div>
        <div id="collapse" class="collapse show" aria-labelledby="heading" data-parent="#accordion">
            <div class="card-body">
                @Model.FAQs.ToList()[0].Answer
            </div>
        </div>

    </div>
</div>

@{
    for (int i = 1; i < @Model.FAQs.ToList().Count(); i++)
    {
        <div id="accordion">
            <div class="card">
                <div class="card-header" id="heading-@i">
                    <h5 class="mb-0">
                        <button class="btn btn-block text-left collapsed" data-toggle="collapse" data-target="#collapse-@i" aria-expanded="false" aria-controls="collapse-@i">
                            @Model.FAQs.ToList()[i].Question
                        </button>
                    </h5>
                </div>
                <div id="collapse-@i" class="collapse" aria-labelledby="heading-@i" data-parent="#accordion">
                    <div class="card-body">
                        @Model.FAQs.ToList()[i].Answer
                    </div>
                </div>
            </div>
        </div>
    }
}


