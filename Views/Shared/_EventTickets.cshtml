@model eShop.Presentation.ViewModels.EventCreateEditViewModel 
 @*DetailsViewModel*@

    <div class="my-3">
        @{
            for (int i = 0; i < @Model.Tickets.ToList().Count(); i++)
            {
                <div id="accordion">
                    <div class="card">
                        <div class="card-header" id="headingOne">
                                    <h5 class="mb-0">
                                        <a class="btn btn-block text-left" data-toggle="collapse" data-target="#collapse_@i" aria-expanded="true" aria-controls="collapse_@i">
                                            @Model.Tickets.ToList()[i].TicketName | @Model.Tickets.ToList()[i].TicketPrice
                                        </a>
                                    </h5>
                        </div>
                        <div id="collapse_@i" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                @Model.Tickets.ToList()[i].Description
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

