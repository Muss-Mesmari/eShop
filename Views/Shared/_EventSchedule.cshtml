@model eShop.Presentation.ViewModels.DetailsViewModel


<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            @{for (int i = 0; i < @Model.Day.Select(d => d.DayOfWeek).ToList().Count(); i++)
                {
                    <a class="list-group-item list-group-item-action" id="list-@i-list" data-toggle="list" href="#list-@i" role="tab" aria-controls="@i">
                        @Model.Day.Select(d => d.DayOfWeek).ToList()[i]
                    </a>
                }
            }
        </div>
    </div>

    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            @{for (int i = 0; i < @Model.EventSchedule.Count(); i++)
                {
                    <div class="tab-pane fade" id="list-@i" role="tabpanel" aria-labelledby="list-@i-list">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">From</th>
                                    <th scope="col">To</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <table class="table m-0">
                                            <tr>
                                                <td scope="row">
                                                    @{foreach (var dayTimeStart in @Model.EventSchedule[i])
                                                        {
                                                            <table class="table table-borderless table-hover m-0">
                                                                <tr>
                                                                    <td scope="row">
                                                                        @dayTimeStart.Key
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        }
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </td>

                                    <td>
                                        <table class="table m-0">
                                            <tr>
                                                <td scope="row">
                                                    @{foreach (var dayTimeEnd in @Model.EventSchedule[i])
                                                        {
                                                            <table class="table table-borderless table-hover m-0">
                                                                <tr>
                                                                    <td scope="row">
                                                                        @dayTimeEnd.Value
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        }
                                                    }
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
            }
        </div>
        <div>
            <p><strong>P.S.</strong> Click on each day to see the times!</p>
        </div>
    </div>
</div>






