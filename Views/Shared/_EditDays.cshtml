@model IList<eShop.Entities.Entities.Day>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-row">
            <label asp-for="@Model[i].DayOfWeek" class="control-label"></label>
            <select asp-for="@Model[i].DayOfWeek" class="form-control" asp-items="@(new SelectList(Enum.GetValues(typeof(DayOfWeek))))"><option>Choose days</option></select>
            <span asp-validation-for="@Model[i].DayOfWeek" class="text-danger"></span>
            <div class="invalid-tooltip">
                Please provide a ticket name.
            </div>
        </div>
    }
